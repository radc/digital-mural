{
  "name": "mural-digital",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "express": "^4.19.2",
    "express-session": "^1.17.3",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.26.1",
    "react-scripts": "5.0.1",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "server": "node server.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"npm run server\" \"npm start\"",

    "preprod": "mkdir -p logs || true",
    "prod": "npm run build && pm2 start ecosystem.config.js",

    "prod:restart": "npm run build && pm2 restart mural-server || pm2 start ecosystem.config.js",
    "prod:stop": "pm2 stop mural-server || true",
    "prod:delete": "pm2 delete mural-server || true",
    "logs": "pm2 logs mural-server --lines 100",
    "startup": "pm2 startup && pm2 save"
  },
  "proxy": "http://localhost:3001",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
